---
import Nav from "./nav.astro";
---

<header>
  <div class="header-container">
    <div class="nav-container">
      <Nav />
    </div>
    <section class="header-info">
      <h1>Commits catárticos</h1>
      <h2>La especificación de commits para developers iracundos.</h2>
      <ul>
        <li><a class="header-link" href="#">Resumen</a></li>
        <li><a class="header-link" href="#">Especificación</a></li>
        <li><a class="header-link" href="#">Contribuir</a></li>
      </ul>
    </section>
    <div class="header-image"></div>
  </div>
</header>

<style>
  header {
    background: rgb(56, 182, 255);
    background: linear-gradient(
      225deg,
      rgba(56, 182, 255, 1) 0%,
      rgba(0, 35, 130, 1) 100%
    );
    min-height: 450px;
    height: 100dvh;
    color: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .header-container {
    display: grid;
    grid-template-areas:
      "nav-container nav-container nav-container"
      "header-info header-info header-image"
      ". . .";
    gap: 8px;
    width: 65dvw;
    height: inherit;
  }

  .nav-container {
    grid-area: nav-container;
  }

  .header-info {
    grid-area: header-info;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .header-image {
    grid-area: header-image;
  }

  ul {
    list-style: none;
    display: flex;
    gap: 20px;
    margin-top: 72px;
  }

  .header-link {
    border: 1px solid #fff;
    border-radius: 50px;
    padding: 12px 16px;
    color: #fff;
    text-decoration: none;
    font-size: 16px;
  }

  .header-link:hover {
    background-color: #fff;
    color: #000;
  }
</style>
